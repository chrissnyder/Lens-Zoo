.zootorial-dialog
  background $white
  color $black
  width $img-dim - 100
  z-index 50
  position fixed
  box-sizing content-box
  box-shadow 0 0 0 5px rgba(100, 100, 100, 0.7)
  border-radius 3px
  letter-spacing 1px
  outline 1px solid transparent
  
  &.narrow
    width $img-dim - 120
  
  .header
    padding 10px 18px 16px
    font-size 16px
    font-weight 700
  
  .details
    padding 0 18px 10px
    font-size 13px
    font-weight 200
  
  button
    margin 8px 18px
    color $black
    font-weight 700
    border-style none
    cursor pointer
    background-color Transparent
    
    &:hover
      color rgb(226, 84, 0)
  
  button[name='close-dialog']
    position absolute
    right 0
    top 0
    margin 10px
    padding 2px 4px
  
  button[name='next-step']
    position relative
    bottom 0
    margin 10px
    left 75%
    border 1px solid #909090
    background rgb(233, 233, 233)
  
  &.hidden
    display none

.zootorial-blocker
  opacity 0
  z-index 5