.zootorial-dialog
  background $white
  color $black
  width $img-dim - 100
  z-index 100
  position fixed
  
  .header
    padding 10px 18px 0
    font-size 16px
    font-weight 700
  
  .content
    padding 0 18px 10px
    font-size 13px
    font-weight 200
  
  button
    margin 8px 18px
    color $black
    font-weight 700
    background rgb(233, 233, 233)
    border-style none
    cursor pointer
    border 1px solid #909090
    &:hover
      color rgb(226, 84, 0)
  
  button[name='close']
    position absolute
    right 0
    top 0
    margin 10px
    padding 2px 4px
  
  transition all 200ms cubic-bezier(0.770, 0.000, 0.175, 1.000)
  -webkit-transition-timing-function cubic-bezier(0.770, 0.000, 0.175, 1.000)
  -moz-transition-timing-function cubic-bezier(0.770, 0.000, 0.175, 1.000)
  transition-timing-function cubic-bezier(0.770, 0.000, 0.175, 1.000)
  
  
  &.hidden
    display none