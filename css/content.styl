
.science, .guide
  .content
    width 700px
    padding-bottom 30px
  
    h3
      color #000d18
      font-size 11px
      font-weight 600
      text-shadow 0px 1px 0px rgba(255, 255, 255, .25)
      text-transform uppercase
      padding-bottom 30px
      border-bottom 1px solid #003461
      box-shadow 0px 1px 0px #0072C9
  
    h2
      color  #000D18
      font-size 20px
      font-weight 200
      line-height 26px
