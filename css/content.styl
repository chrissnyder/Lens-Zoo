
.science, .guide
  .content
    width 700px
    padding-bottom 30px
    color #000D18
    
    h2
      font-size 20px
      font-weight 200
      line-height 26px
      text-shadow 0px 1px 0px rgba(255, 255, 255, .25)
      margin-bottom 30px
      
    h3
      font-size 11px
      font-weight 600
      text-shadow 0px 1px 0px rgba(255, 255, 255, .25)
      text-transform uppercase
      padding-bottom 30px
      border-bottom 1px solid #003461
      box-shadow 0px 1px 0px #0072C9

    h4
      font-size 14px
      font-weight 200
      line-height 26px
      text-shadow 0px 1px 0px rgba(255, 255, 255, .25)
      margin-bottom 30px
      
    p
      color #FFF
      font-size 14px
      letter-spacing 1px
      font-weight 100
      line-height 20px
      text-shadow 0px 1px 0px #013A66