.stack > :not(.classifier)

  &.home

    .portal
      border-radius 50%
      position relative

      &:before
        border-radius 50%
        box-shadow: inset 0 0 15px 5px rgba(#000, 1),
          0 1px 1px 0 rgba(#fff, 0.25)
        content ""
        height 100%
        position absolute
        width 100%
        z-index 1

      img
        border-radius 50%
        display block

    .site-actions
      @extends #semantic-list
      padding 0 0 0 100px

      figure
        background #000
        border 4px solid #02477e
        border-radius 65px
        left -85px
        padding 10px
        position absolute
        height 40px
        width 40px

      img
        vertical-align middle
        padding-top 2px

      li
        margin 0 0 40px 0
        position relative

  .guide-content
    background url(images/bg-light-blue.png) repeat

  .guide-menu
    @extends #clearfix
    @extends #semantic-list

    li
      background url(images/bg-dark-blue.png) repeat
      border 1px solid transparent
      border-bottom-color #3c90d2
      box-sizing border-box
      color #2c81c4
      cursor pointer
      float left
      font-weight 700
      line-height 41px
      text-align center
      width 50%

      &.show
        background url(images/bg-light-blue.png) repeat
        border-color #3c90d2
        border-bottom-color transparent
        color #fff
        text-shadow 0 1px 0 #013a66

  .content
    color #EFEFEF
    margin 0 auto
    padding 1px 0 0 0 // cheating
    text-shadow 0 1px 0 rgba(#013a66, 0.8)
    width 800px
    
    .quote
      font-size 20px
      margin-top 30px
      line-height 40px
      text-align right
      
    
    &:last-child
      padding 1px 0 50px 0

    > header
      padding 50px 0 30px 0
      text-align center

      h1:last-child
        margin-bottom 0

      p
        color #000
        font-size 16px
        margin 0 auto
        text-shadow 0 1px 1px lighten(#0072c9, 8%)
        width 86%
    

    section

      &:not(.show)
        display none
    
    ul.menu
      @extends #semantic-list
      border-top 1px solid #3792d9
      border-bottom 1px solid #2670aa
      height 40px
      margin 20px 0
      position relative

      &:before
        border-top 1px solid #2670aa
        content ""
        position absolute
        top 0
        width 100%

      &:after
        border-bottom 1px solid #3792d9
        bottom 0
        content ""
        left 0
        position absolute
        width 100%

      li
        color #fff
        cursor pointer
        float left
        font-size 12px
        font-weight 700
        margin 0 30px 0 0
        line-height 41px

        &.show
          color #000d18
          text-shadow none

