.stack > :not(.classifier)

  &.home

    .portal
      border-radius 50%
      position relative

      &:before
        border-radius 50%
        box-shadow: inset 0 0 15px 5px rgba(#000, 1),
          0 1px 1px 0 rgba(#fff, 0.25)
        content ""
        height 100%
        position absolute
        width 100%
        z-index 1

      img
        border-radius 50%
        display block

    .site-actions
      @extends #semantic-list
      padding 0 0 0 100px

      figure
        background #000
        border 4px solid #02477e
        border-radius 65px
        left -85px
        padding 10px
        position absolute
        height 40px
        width 40px

      img
        vertical-align middle
        padding-top 2px

      li
        margin 0 0 40px 0
        position relative

  .content
    color #EFEFEF
    margin 0 auto
    padding 1px 0 0 0 // cheating
    text-shadow 0 1px 0 rgba(#013a66, 0.8)
    width 800px
    
    .quote
      font-size 20px
      margin-top 30px
      line-height 40px
      text-align right
      
    .guide-menu
      @extends #clearfix
      @extends #semantic-list
      border-bottom 5px solid black

      li
        box-sizing border-box
        color rgb(46, 130, 191)
        background-color rgb(3, 71, 119)
        cursor pointer
        float left
        font-weight 700
        font-size 16px
        line-height 41px
        text-align center
        padding 0 10px
        width 150px

        &.show
          color #FFF
          background-color black
          text-shadow 0 1px 0 #013a66
    
    &:last-child
      padding 1px 0 50px 0

    > header
      padding 50px 0 30px 0
      text-align center

      h1:last-child
        margin-bottom 0

      p
        font-size 16px
        margin 0 auto
        width 86%
    
    section

      &:not(.show)
        display none
    
    ul.menu
      @extends #semantic-list
      height 40px
      margin 20px 0
      position relative

      &:before
        content ""
        position absolute
        top 0
        width 100%

      &:after
        bottom 0
        content ""
        left 0
        position absolute
        width 100%

      li
        color #000d18
        cursor pointer
        float left
        font-size 14px
        font-weight 700
        margin 0 30px 0 0
        line-height 41px

        &.show
          color #FFF
          text-shadow none

